<h1>ログイン</h1>

<% form_tag do -%>
<p><label for="login">アカウント</label><br/>
<%= text_field_tag 'login' %></p>

<p><label for="password">パスワード</label><br/>
<%= password_field_tag 'password' %></p>

<p><label for="remember_me">ログイン状態を保持する（2週間）：</label>
<%= check_box_tag 'remember_me', true %></p>

<p><%= submit_tag 'ログイン' %></p>
<% end %>
<script type="text/javascript">Field.focus('login')</script>
